@{
    ViewBag.Title = "Change Passowrd";
    Layout = "~/Views/Shared/ClientsLayout.cshtml";
}

<!--Crumb Bar-->
<section class="content-header">
  <h1>
    Clients
    <small>Change Password</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Clients")"><i class="fa fa-dashboard"></i>Clients</a></li>
    <li class="active">Change Password</li>
  </ol>
</section>

 <section class="content">
   <div class="login-box-body">
     <div class="box-header">
       <h3 class="box-title">Change Password</h3>
     </div>
     <p class="login-box-msg">Please enter current password and new password</p>
     <form id="myForm">
       <div class="form-group has-feedback">
         <input type="password" class="form-control" placeholder="Current Password" required id="currentpassword" pattern="\w+" name="currentpassword" title="Please enter your current password.">
         <span class="glyphicon glyphicon-lock form-control-feedback"></span>
       </div>
       <div class="form-group has-feedback">
         <input type="password" class="form-control" placeholder="New Password" required id="pwd1" title="Password must contain at least 6 characters, including UPPER/lowercase and numbers." pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" name="pwd1">
         <span class="glyphicon glyphicon-lock form-control-feedback"></span>
       </div>
       <div class="form-group has-feedback">
         <input type="password" class="form-control" placeholder="Retype Password" id="pwd2" title="Please enter the same Password as above." required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" name="pwd2">
         <span class="glyphicon glyphicon-lock form-control-feedback"></span>
       </div>
       <div>
         <label id="errorMsg" style="color: firebrick; font-weight: bold;"></label></div>
       <div class="row">
         <div class="col-xs-8">
         </div>
         <!-- /.col -->
         <div class="col-xs-4">
           <button type="submit" class="btn btn-primary btn-block btn-flat">Change Password</button>
         </div>
         <!-- /.col -->
       </div>
     </form>

   </div>

 </section>
<!-- jQuery 3 -->
<script src="~/assets/js/ClientUsers/ChangePassword.js"></script>
